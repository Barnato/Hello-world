CREATE database cm_blog;
//Create database called cm_blog//
USE cm_blog;
//Use the database//
SHOW databases;
//list all databases so you can check that cm_blog was created//
CREATE TABLE cm_blog.article 
//create a table called article in the database called cm_blog//
(article_id int NOT NULL AUTO_INCREMENT Primary Key, author_user_id int NOT NULL, title varchar(35), body text, publish_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP);
//create these columns with these value types//
CREATE TABLE cm_blog.user
(user_id int NOT NULL AUTO_INCREMENT Primary Key, name varchar(35), emailaddress varchar(80), password varchar (32));
//create a table called user in the database called cm_blog//
UPDATE user
SET password = MD5(password);
// use MD5 encryption to prevent password being show in plain text
INSERT INTO user (password)
VALUES (MD5('verysecretpassword'));
//insert a record with MD5 applied to the password field//
SELECT * FROM user WHERE password=MD5('verysecretpassword');
//check it works by trying to authenticate a user//
